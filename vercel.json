{
  "version": 2,
  "builds": [
    {
      "src": "api/login.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/public/index.html"
    },
    {
      "src": "/teacher",
      "dest": "/public/teacher.html"
    },
    {
      "src": "/api/login",
      "dest": "/api/login.js",
      "methods": ["POST"]
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "TEACHER_PASSWORD": "demo123"
  }
}
